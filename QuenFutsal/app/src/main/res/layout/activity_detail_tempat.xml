<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".DetailTempatActivity">

    <ImageView
        android:id="@+id/btnBackDtPlace"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/ivDtPlace"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/btnBackDtPlace"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/llTitleplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivDtPlace"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/btnNav"
        android:background="@color/light_black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleDtPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAddressDtPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnNav"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@id/ivDtPlace"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_navigation" />
</RelativeLayout>