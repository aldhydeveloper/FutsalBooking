<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".BookingActivity">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:sv_animationType="None"
        app:sv_stepPadding="12dp"
        app:sv_selectedCircleColor="@color/light_black"
        app:sv_selectedStepNumberColor="@color/white"
        app:sv_selectedTextColor="@color/light_black"
        app:sv_doneCircleColor="@color/green"
        app:sv_doneTextColor="@color/white"
        app:sv_doneStepMarkColor="@color/white"/>

    <com.ns.quenfutsalbooking.Common.NonSwipeViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/step_view"
        android:layout_above="@id/layout_button"/>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_previous"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sebelumnya"
            android:enabled="false"
            android:background="@color/light_black"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="@string/Selanjutnya"
            android:background="@color/light_black"
            android:textColor="@color/white"
            android:layout_marginStart="4dp"/>

    </LinearLayout>


</RelativeLayout>